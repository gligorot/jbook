<!DOCTYPE html>
<html>
  <head>
    <title>JBook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <style>
    hr {width: 50%;}
  </style>

  <body>
  	<p class="notice"><%= notice %></p>
   	<p class="alert"><%= alert %></p>
    <% if user_signed_in? %>
      <%= link_to "Home", "/" %>
      <%= link_to "Notifications (#{@notification_count})", '/notifications' %>
      <%= link_to "Profile", profile_path(current_user.profile) %>
      <%= link_to "All Users", profiles_path %>
      <div style="float: right;">
        Logged in as: <strong><%= current_user.profile.name %> <%= current_user.profile.surname %></strong>, email: <%= current_user.email %>
        
        <%= link_to "| Sign out", destroy_user_session_path, method: :delete %>
      </div>
    <% end %>
    <div style="text-align: center;">
      <%= yield %>
    </div>
  </body>
</html>
