<!DOCTYPE html>
<html>
  <head>
    <title>JBook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="notice"><%= notice %></p>
   	<p class="alert"><%= alert %></p>

    <%= link_to "Home", "/" %>
    <%= link_to "Notifications (#{@notification_count})", '/notifications' %>
    <p> | Logged in as: <%= current_user.email %>. 
    <%= link_to "Sign out", destroy_user_session_path, method: :delete  if user_signed_in? %> </p>
    <%= yield %>
  </body>
</html>
